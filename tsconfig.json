{
    "compilerOptions": {
        /* Language & Environment */
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        /* Module Resolution */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        /* Output */
        "outDir": "./dist",
        "rootDir": "./src",
        /* Type Checking â€” strict mode enforces quality */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        /* Emit */
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}